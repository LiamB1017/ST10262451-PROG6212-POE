@model CMCSProject.Models.Claim

<h2>Submit New Claim</h2>

<form asp-action="Submit" method="post">
    <div class="form-group">
        <label>Hours Worked</label>
        <input type="number" asp-for="HoursWorked" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Hourly Rate</label>
        <input type="number" asp-for="HourlyRate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
<h2>Submit a New Claim</h2>

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Hours Worked</label>
        <input type="number" asp-for="HoursWorked" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Hourly Rate</label>
        <input type="number" asp-for="HourlyRate" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Additional Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
